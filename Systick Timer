Main.c:
#include <stdio.h>
#include <stdint.h>
#include <systick.h>
#include "stm32f4xx.h"


#define GPIODEN      (1U<<3)
#define LED_PIN      (1U<<14)


int main(void)
{

	RCC ->AHB1ENR |= GPIODEN;
	 //PORT D - LED

		GPIOD->MODER &= ~(1U<<29); //PD14 -> 29,28  (01)
		// OR OPERATOR USED TO GET THE DESIRED BIT TO STATE 1
		GPIOD->MODER |= 1U<<28;



	while(1)
	{
		printf("A second passed: \n\t");
		GPIOD->ODR ^= LED_PIN;
		systickDelayMs(1000);
	}




}

------------------------------------------------------------------------------------------------------------------------------------------------------------------------

Header File:

#ifndef INC_SYSTICK_H_
#define INC_SYSTICK_H_

void systickDelayMs(int delay);

#endif /* INC_SYSTICK_H_ */

------------------------------------------------------------------------------------------------------------------------------------------------------------------------

Source File:

#include "stm32f4xx.h"

#define SYSTICK_LOAD_VAL     16000
#define CTRL_ENABLE          (1U<<0)
#define CTRL_CLKSRC           (1U<<2)
#define CTRL_COUNTFLAG          (1U<<16)

//4.4.1 CORTEX M4 device user guide






void systickDelayMs(int delay)
{
	//CONFIGURE SYSTICK
	//RELOAD WITH NO: OF CLOCKS PER MILLISECOND
	SysTick ->LOAD = SYSTICK_LOAD_VAL;

	//CLEAR SYSTICK CURRENT VALUE REGISTER
	SysTick ->VAL = 0;
	//ENABLEE SYSTICK AND SELEVT INTERNAL CLK SRC
	SysTick ->CTRL = CTRL_ENABLE |CTRL_CLKSRC;

	for(int i=0;i<delay;i++)
	{
		while((SysTick ->CTRL & CTRL_COUNTFLAG  ) ==0 ){}
	}
	SysTick ->CTRL = 0;
}
